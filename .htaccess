# PostSpark URL Rewriting
RewriteEngine On

# Handle clean URLs
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Dashboard routes
RewriteRule ^dashboard/?$ webapp.html [L]
RewriteRule ^campaigns/?$ webapp.html [L]
RewriteRule ^campaigns/([^/]+)/?$ webapp.html [L]
RewriteRule ^create-campaign/?$ webapp.html [L]
RewriteRule ^settings/?$ webapp.html [L]

# Auth routes
RewriteRule ^login/?$ login.html [L]
RewriteRule ^register/?$ register.html [L]

# Website routes
RewriteRule ^home/?$ index.html [L]

# Default route
RewriteRule ^$ index.html [L]

# Handle API routes
RewriteRule ^api/(.*)$ api/$1 [L]
