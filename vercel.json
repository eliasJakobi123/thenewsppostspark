{
  "rewrites": [
    {
      "source": "/api/ai-response",
      "destination": "/api/ai-response.js"
    },
    {
      "source": "/api/openai-search",
      "destination": "/api/openai-search.js"
    },
    {
      "source": "/api/reddit-search",
      "destination": "/api/reddit-search.js"
    },
    {
      "source": "/api/digistore-ipn",
      "destination": "/api/digistore-ipn.js"
    },
    {
      "source": "/dashboard",
      "destination": "/webapp.html"
    },
    {
      "source": "/campaigns",
      "destination": "/webapp.html"
    },
    {
      "source": "/campaigns/(.*)",
      "destination": "/webapp.html"
    },
    {
      "source": "/create-campaign",
      "destination": "/webapp.html"
    },
    {
      "source": "/settings",
      "destination": "/webapp.html"
    },
    {
      "source": "/login",
      "destination": "/login.html"
    },
    {
      "source": "/register",
      "destination": "/register.html"
    },
    {
      "source": "/home",
      "destination": "/index.html"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/webapp.html"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/home",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
